@model framework_web_01.Models.cthd
@using framework_web_01.Models

@{
    ViewBag.Title = "chitiethoadon";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2  align="center">Chi tiết hóa đơn</h2>
<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:10%">Mã CTHD</th>
                <th style="width:20%">Mã hóa đơn</th>
                <th style="width:20%">Mã sản phẩm</th>
                <th style="width:15%" class="text-center">Số lượng</th>
                <th style="width:20%" class="text-center">Thành tiền</th>
                <th style="width:15%"></th>
            </tr>
        </thead>
        <tbody>
            @{

                if (Model != null)
                {
                    foreach (cthd item in ViewBag.sqlq)
                    {

                        <tr>
                            <td data-th="Product">
                                <div class="row">
                                    <div class="col-sm-2 hidden-xs">
                                        <p>@item.macthd</p>
                                    </div>
                                </div>
                            </td>
                            <td data-th="Price">@item.mahd</td>
                            <td data-th="Price">@item.masp</td>

                            <td data-th="Subtotal" class="text-center">@item.soluong</td>

                            <td data-th="Subtotal" class="text-center">@item.thanhtien</td>

                            <td class="actions" data-th="">
                                <button class="btn btn-info btn-sm">

                                    <i class="fa fa-edit">@Html.ActionLink("CT", "Chitietsanpham", "SanPham", new { id = item.masp }, new { @class = "chonmua" })</i>

                                </button>
                            </td>
                        </tr>
                    }


                }
            }
        </tbody>
        <tfoot>
            <tr class="visible-xs">
            </tr>
            <tr>
                <td>
                    <a href="https://localhost:44321/HoaDon" class="btn btn-warning"><i class="fa fa-angle-left"></i> Quay lại</a>
                </td>
                <td class="hidden-xs">  </td>
                <td class="hidden-xs">  </td>
                <td class="hidden-xs">  </td>
                <td class="hidden-xs">  </td>
            </tr>
        </tfoot>
    </table>
</div>

