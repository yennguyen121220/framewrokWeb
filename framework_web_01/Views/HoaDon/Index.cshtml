@model IEnumerable<framework_web_01.Models.hoadon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 align="center">Danh sách hóa đơn</h1>

<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:10%">Mã hóa đơn</th>
                <th style="width:15%">Tên đăng nhập</th>
                <th style="width:10%">Tổng tiền</th>
                <th style="width:15%" class="text-center">Số điện thoại</th>
                <th style="width:20%" class="text-center">Địa chỉ</th>
                <th style="width:15%" class="text-center">Họ tên người nhận</th>
                <th style="width:15%"></th>
            </tr>
        </thead>
        <tbody>
            @{

                if (Model != null)
                {
                    foreach (var item in Model)
                    {

                        <tr>
                            <td data-th="Product">
                                <div class="row">
                                    <div class="col-sm-2 hidden-xs">
                                        <p>@item.mahd</p>
                                    </div>
                                </div>
                            </td>
                            <td data-th="Price">@item.tendangnhap</td>
                            <td data-th="Price">@item.tien</td>

                            <td data-th="Subtotal" class="text-center">@item.sdt</td>

                            <td data-th="Subtotal" class="text-center">@item.diachi</td>

                            <td data-th="Subtotal" class="text-center">@item.hoten</td>
                            <td class="actions" data-th="">
                                <button class="btn btn-info btn-sm">
                                    <i class="fa fa-edit">@Html.ActionLink("CTKH", "Chitietkhachhang", "TaiKhoan", new { tendangnhap = item.tendangnhap }, new { @class = "chonmua" })</i>
                                </button>
                                <button class="btn btn-danger btn-sm">
                                    <i class="fa fa-trash-o">@Html.ActionLink("CTHD", "chitiethoadon", "HoaDon", new { mahd = item.mahd }, new { @class = "chonmua" })</i>
                                </button>
                            </td>
                        </tr>
                    }


                }
            }
        </tbody>
        <tfoot>
            <tr class="visible-xs">
            </tr>
            <tr>
                <td>
                    <a href="https://localhost:44321/" class="btn btn-warning"><i class="fa fa-angle-left"></i> Trang chủ</a>
                </td>
                <td class="hidden-xs">  </td>
                <td class="hidden-xs">  </td>
                <td class="hidden-xs">  </td>
                <td class="hidden-xs">  </td>
            </tr>
        </tfoot>
    </table>
</div>
