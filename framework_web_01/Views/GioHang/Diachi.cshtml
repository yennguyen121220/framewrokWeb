@model IList<framework_web_01.Models.taikhoan>

@{
    ViewBag.Title = "Diachi";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@if (Session["role"] == null)
{
    Response.Redirect("https://localhost:44399/TaiKhoan/DangNhap");
}

@using (Html.BeginForm("Diachi", "GioHang", FormMethod.Post))
{
    <section class="order-form my-4 mx-4" align="center">
        <div class="container pt-4">
            @{
                foreach (var item in Model)
                {
                    <div class="row">
                        <div class="col-12">
                            <h1>Xác Nhận Đặt Hàng</h1>
                            <span>Thông tin người nhận</span>
                            <hr class="mt-1">
                        </div>
                        <div class="col-12">

                            <div class="row mt-3 mx-4">
                                <div class="col-12">
                                    <label class="order-form-label">Tên người nhận</label>
                                </div>
                                <div class="col-12">
                                    <input class="order-form-input" name="name" value="@item.hoten">
                                </div>
                            </div>

                            <div class="row mt-3 mx-4">
                                <div class="col-12">
                                    <label class="order-form-label">Địa chỉ</label>
                                </div>
                                <div class="col-12">
                                    <input class="order-form-input" name="diachi" value="@item.diachi">
                                </div>
                            </div>

                            <div class="row mt-3 mx-4">
                                <div class="col-12">
                                    <label class="order-form-label" for="date-picker-example">Số điện thoại</label>
                                </div>
                                <div class="col-12">
                                    <input class="order-form-input datepicker" name="sodt" value="@item.sdt">
                                </div>
                            </div>

                            <div class="row mt-3 mx-4">
                                <div class="col-12">
                                    <label class="order-form-label" for="date-picker-example">Tiền cần thanh toán</label>
                                </div>
                                <div class="col-12">
                                    <input class="order-form-input datepicker" name="tien" value="@Session["tongtien"]" readonly>
                                </div>
                            </div>

                            <div class="row mt-3 mx-4">
                                <div class="col-12">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" name="validation" id="validation" value="1" checked="checked" required>
                                        <label for="validation" class="form-check-label">Thanh toán khi nhận hàng</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-12">
                                    <input type="submit" value="Xác nhận" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </section>
}



