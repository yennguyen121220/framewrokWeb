@model IEnumerable<framework_web_01.Models.taikhoan>

@{
    ViewBag.Title = "DanhSachTK";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:20%">Tên đăng nhập</th>
                <th style="width:20%">Họ tên</th>
                <th style="width:15%">Mật khẩu</th>
                <th style="width:15%" class="text-center">Số điện thoại</th>
                <th style="width:20%" class="text-center">Địa chỉ</th>
                <th style="width:10%"></th>
            </tr>
        </thead>
        <tbody>
            @{

                if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        
                        <tr>
                            @*<ul>
                                <li>*@
                                    <td data-th="Product">
                                        <div class="row">
                                            <div class="col-sm-2 hidden-xs">
                                                <p>@item.tendangnhap</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td data-th="Price">@item.hoten</td>
                                    <td data-th="Price">@item.matkhau</td>

                                    <td data-th="Subtotal" class="text-center">@item.sdt</td>

                                    <td data-th="Subtotal" class="text-center">@item.diachi</td>
                                    <td class="actions" data-th="">
                                        <button class="btn btn-info btn-sm">

                                            <i class="fa fa-edit">@Html.ActionLink("CT", "Chitietkhachhang", "TaiKhoan", new { tendangnhap = item.tendangnhap }, new { @class = "chonmua" })</i>
                                            @*@Html.ActionLink("Đặt Mua", "ThemGioHang", "GioHang", new { id = item.masp }, new { @class = "chonmua" })
                                            <a href="https://localhost:44321/TaiKhoan/Chitietkhachhang/@item.tendangnhap.ToString()">CT</a>*@
                                        </button>
                                    </td>

                            @*</li>
                            </ul>*@
                        </tr>
                        }


                        }
                        }
                    </tbody>
        <tfoot>
            <tr class="visible-xs">
            </tr>
            <tr>
                <td>
                    <a href="https://localhost:44321/" class="btn btn-warning"><i class="fa fa-angle-left"></i> Trang chủ</a>
                </td>
                <td class="hidden-xs">  </td>
                <td class="hidden-xs">  </td>
                <td class="hidden-xs">  </td>
                <td class="hidden-xs">  </td>
            </tr>
        </tfoot>
    </table>
</div>
