@model framework_web_01.Models.sanpham

@{
    ViewBag.Title = "SuaSP";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="main__form-wrap-1" align="center">
        <div class="main_form-container">
            <h4>Cập nhật sản phẩm</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.masp)

            <div class="input__group">
                @Html.LabelFor(model => model.loai, htmlAttributes: new { })
                @Html.EditorFor(model => model.loai, new { htmlAttributes = new { } })
                @Html.ValidationMessageFor(model => model.loai, "", new { })
            </div>
            <div class="input__group">
                @Html.LabelFor(model => model.tensp, htmlAttributes: new { })
                @Html.EditorFor(model => model.tensp, new { htmlAttributes = new { } })
                @Html.ValidationMessageFor(model => model.tensp, "", new { })
            </div>
            <div class="input__group">
                @Html.LabelFor(model => model.gia, htmlAttributes: new { })
                @Html.EditorFor(model => model.gia, new { htmlAttributes = new { } })
                @Html.ValidationMessageFor(model => model.gia, "", new { })
            </div>


            <div class="input__group">
                @Html.LabelFor(model => model.mota, htmlAttributes: new { })
                @Html.EditorFor(model => model.mota, new { htmlAttributes = new { } })
                @Html.ValidationMessageFor(model => model.mota, "", new { })
            </div>


            <div class="input__group">
                @Html.LabelFor(model => model.hinhanh, htmlAttributes: new { })
                @Html.EditorFor(model => model.hinhanh, new { htmlAttributes = new { @class = "input__group input__group--image-edit-1",@id="output", @name = "tenhinhanh " } })
                @Html.ValidationMessageFor(model => model.hinhanh, "", new { })
            </div>

            <p align="left" class="clickToChangeImage" style="font-size: 1.4rem; cursor: pointer">Click để sửa (không sửa) hình ảnh</p>

            <div class="input__group input__group--image-edit-2">
                <input type="file" class="btn-file-upload" id="inputfile" name="hinhanh" value="hình ảnh" />
            </div>


            <div class="input__group-submit-btn">
                <table class="tbl">
                    <tr>
                        <td>
                            <a class="cn" href="https://localhost:44321/">Về trang chủ</a>
                        </td>
                        <td>
                            <input type="submit" value="Lưu" class="btn btn-default" />
                        </td>
                    </tr>
                </table>
            </div>
        </div>


    </div>
}

<script type="text/javascript">
    document.getElementById('inputfile')
        .addEventListener('change', function () {

            var fr = new FileReader();
            fr.onload = function () {
                document.getElementById('output')
                    .textContent = fr.result;
            }

            fr.readAsText(this.files[0]);
        })
</script> 